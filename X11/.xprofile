#!/usr/bin/bash

xrdb ~/.Xresources

PATH=$PATH:/home/$USER/scripts
export PATH
XDG_CONFIG_HOME=~/.config
export XDG_CONFIG_HOME

# Fix for java applications
export _JAVA_AWT_WM_NONREPARENTING=1 
export AWT_TOOLKIT=MToolkit 
wmname LG3D

# Enable touchpad tap
xinput set-prop 13 371 1

# Enable natural touchpad scrolling
xinput set-prop 13 349 1

# Set layout switch to Win+Space
setxkbmap -layout us,ru -option "grp:win_space_toggle"

# Set wallpaper
feh --bg-scale ~/Pictures/Wallpapers/ev.png

# GTK settings
export GTK_THEME=Sweet-Dark

# Unlock keyring
eval $(gnome-keyring-daemon --start)
export SSH_AUTH_SOCK

bar.sh &
flameshot &
sxhkd &

